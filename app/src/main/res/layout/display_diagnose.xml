<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/form_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/open_sans_reg"
        android:letterSpacing="0.05"
        android:maxLines="1"
        android:text="Form"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/line"
        app:layout_constraintEnd_toEndOf="@id/form_title"
        app:layout_constraintStart_toStartOf="@id/form_title"
        app:layout_constraintTop_toBottomOf="@id/form_title"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/blood_pressure_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Blood Pressure"
        android:fontFamily="@font/open_sans_reg"
        android:letterSpacing="0.05"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/line"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blood_pressure_container"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/blood_pressure_title">

        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintWidth_percent="0.3"
            style="@style/MatchWrap.TextInputLayout"
            android:layout_width="0dp"
            app:boxStrokeColor="@android:color/white"
            android:hint="Systolic"
            app:hintTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:hintTextAppearance="@style/TextAppearance"
            android:id="@+id/sys_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance"
                android:textColor="@android:color/white"
                android:id="@+id/sys_input"
                android:maxLength="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/separate_line"
            android:layout_width="3dp"
            android:background="@android:color/white"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:rotation="20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sys_input_layout"
            app:layout_constraintEnd_toStartOf="@id/dia_input_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintWidth_percent="0.3"
            style="@style/MatchWrap.TextInputLayout"
            android:layout_marginStart="20dp"
            android:layout_width="0dp"
            android:hint="Diastolic"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            android:textColorHint="@android:color/white"
            app:hintTextAppearance="@style/TextAppearance"
            android:id="@+id/dia_input_layout"
            app:layout_constraintStart_toEndOf="@id/separate_line"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextAppearance"
                android:textColor="@android:color/white"
                android:id="@+id/dia_input"
                android:maxLength="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="16sp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/gender_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:fontFamily="@font/open_sans_reg"
        android:letterSpacing="0.05"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/blood_pressure_container" />

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/gender_title">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="Male"
            android:minHeight="0dp"
            android:letterSpacing="0.05"
            android:checked="true"
            android:textColor="@android:color/white"
            android:fontFamily="@font/open_sans_reg"/>

        <RadioButton
            android:id="@+id/female"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:text="Female"
            android:minHeight="0dp"
            android:letterSpacing="0.05"
            android:textColor="@android:color/white"
            android:fontFamily="@font/open_sans_reg"/>

        <RadioButton
            android:layout_marginStart="20dp"
            android:id="@+id/other"
            android:buttonTint="@android:color/white"
            android:minHeight="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:letterSpacing="0.05"
            android:textColor="@android:color/white"
            android:fontFamily="@font/open_sans_reg"/>

    </RadioGroup>

    <TextView
        android:id="@+id/age_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Age"
        android:fontFamily="@font/open_sans_reg"
        android:letterSpacing="0.05"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/rg_gender"/>

    <EditText
        android:id="@+id/inp_age"
        android:maxLines="1"
        android:ellipsize="end"
        android:ems="6"
        android:layout_width="wrap_content"
        android:fontFamily="@font/open_sans_reg"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:letterSpacing="0.05"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:background="@drawable/inp_background"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/age_title"
        app:layout_constraintBottom_toBottomOf="@id/age_title"
        app:layout_constraintStart_toEndOf="@id/age_title"
        android:layout_marginStart="20dp"
        android:hint="Input your age"
        android:inputType="number"
        android:autofillHints="Input your age" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/inp_background"
        android:minHeight="0dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:drawableLeft="@drawable/ic_arrow"
        android:drawableStart="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/inp_age"
        android:layout_marginTop="100dp"
        android:text="Back"
        android:letterSpacing="0.05"
        android:fontFamily="@font/roboto_reg"
        android:textColor="@android:color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_rect"
        android:minHeight="0dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawableRight="@drawable/ic_arrow_rorate"
        android:drawableEnd="@drawable/ic_arrow_rorate"
        app:layout_constraintEnd_toEndOf="@id/line"
        app:layout_constraintTop_toBottomOf="@id/inp_age"
        android:layout_marginTop="100dp"
        android:text="Continue"
        android:letterSpacing="0.05"
        android:fontFamily="@font/roboto_reg"
        android:textColor="@android:color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>