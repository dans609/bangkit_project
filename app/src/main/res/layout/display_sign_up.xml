<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <View
        android:id="@+id/container_black"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#505A64"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:background="@drawable/wave_signup"
        android:layout_width="100dp"
        android:translationX="5dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/container_black"
        app:layout_constraintBottom_toBottomOf="@id/container_black"
        app:layout_constraintEnd_toStartOf="@id/container_black"/>

    <ImageView
        android:id="@+id/wave_white"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_wave"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@id/container_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/container_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_black"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:lineSpacingMultiplier="1.2"
        android:textSize="35sp"
        android:fontFamily="@font/roboto_reg"
        android:text="Create Account"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:textColor="@android:color/white"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/container_black"
        app:layout_constraintEnd_toEndOf="@id/container_black"
        app:layout_constraintTop_toTopOf="@id/container_black"
        app:layout_constraintBottom_toBottomOf="@id/container_black"
        android:translationY="-20dp"/>

    <EditText
        android:id="@+id/sign_up_inp_uname"
        android:maxLines="1"
        android:ellipsize="end"
        android:drawableLeft="@drawable/ic_person"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:layout_width="0dp"
        android:fontFamily="@font/open_sans_reg"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorIconGray"
        android:letterSpacing="0.05"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/inp_background"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/container_white"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Input Username"
        android:inputType="text"
        android:autofillHints="Input your username" />

    <EditText
        android:id="@+id/sign_up_inp_email"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:fontFamily="@font/open_sans_reg"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorIconGray"
        android:letterSpacing="0.05"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/inp_background"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_inp_uname"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Input Email"
        android:inputType="textEmailAddress"
        android:autofillHints="Input your email" />

    <EditText
        android:id="@+id/sign_up_inp_pwd"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:fontFamily="@font/open_sans_reg"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorIconGray"
        android:letterSpacing="0.05"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_eye_open"
        android:drawableEnd="@drawable/ic_eye_open"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:imeOptions="actionNext"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/inp_background"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_inp_email"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Input Password"
        android:inputType="textPassword"
        android:autofillHints="Input your password" />

    <EditText
        android:id="@+id/re_sign_up_inp_pwd"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:fontFamily="@font/open_sans_reg"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorIconGray"
        android:letterSpacing="0.05"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_eye_open"
        android:drawableEnd="@drawable/ic_eye_open"
        android:drawableLeft="@drawable/ic_lock"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:imeOptions="actionNext"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/inp_background"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_inp_pwd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="Type again your password"
        android:inputType="textPassword"
        android:autofillHints="Input your password" />

</androidx.constraintlayout.widget.ConstraintLayout>